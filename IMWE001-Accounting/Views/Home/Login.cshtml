    <script src="~/lib/vendors/off-canvas.js"></script>
    <script src="~/lib/vendors/hoverable-collapse.js"></script>
    <script src="~/lib/vendors/misc.js"></script>
    <script src="~/lib/vendors/settings.js"></script>
    <script src="~/lib/vendors/todolist.js"></script>
    <!-- endinject -->
</body>

</html>
