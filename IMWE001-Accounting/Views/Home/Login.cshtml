@{
    Layout = null;
    ViewBag.Title = "Login Pages";
}
<base href="@Url.Content("~/")" />
<html lang="en">
<head>
    <!-- Required meta tags -->
    <base href="@Url.Content("~/")" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>เข้าสู่ระบบ | WeAccount</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/css/vendors/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/css/vendors/feather.css">
    <link rel="stylesheet" href="~/css/vendors/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
